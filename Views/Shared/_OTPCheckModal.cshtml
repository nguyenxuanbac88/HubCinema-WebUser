<div id="otpCheckModal" class="custom-modal-overlay" style="display:none;">
    <div class="custom-modal-box">
        <button class="custom-modal-close" onclick="closeOTPCheckModal()">×</button>
        <div class="text-center mb-4">
            <img src="/images/hub_logo_new.png" width="150" alt="OTP" />
            <h4 class="fw-bold mt-2">Xác Thực Mã OTP</h4>
        </div>

        <form id="otpCheckForm">
            <div class="form-group mb-3">
                <label>Mã OTP</label>
                <input type="text" name="otp" id="inputOtp" class="form-control" placeholder="Nhập mã OTP" required />
            </div>
            <button type="submit" class="btn w-100 text-white fw-bold" style="background: #E48600;">XÁC NHẬN</button>
        </form>

        <div id="otpError" class="alert alert-danger mt-3 d-none"></div>
    </div>
</div>
