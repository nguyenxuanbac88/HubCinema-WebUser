@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer

<!-- Modal đăng ký -->
<div id="registerModal" class="custom-modal-overlay" style="display:none; overflow-y: auto; scrollbar-width: none; -ms-overflow-style: none;">
    <div class="custom-modal-box" style="max-height: 90vh; overflow-y: auto; scrollbar-width: none; -ms-overflow-style: none;">
        <button class="custom-modal-close" onclick="closeRegisterModal()">×</button>
        <div class="text-center mb-4">
            <img src="~/images/hub_logo_new.png" width="150" alt="Register" />
            <h4 class="fw-bold mt-2">@Localizer["RegisterTitle"]</h4>
            <p>Password sẽ có kí tự in hoa + kí tự đặc biệt + số và phải > 6 kí tự mấy bạn nhé:v</p>
        </div>
        <form asp-controller="Register" asp-action="Submit" method="post">
            <div class="form-group mb-3">
                <label>@Localizer["FullNameLabel"]</label>
                <input type="text" name="name" class="form-control" placeholder="@Localizer["FullNamePlaceholder"]" required />
            </div>
            <div class="form-group mb-3">
                <label>@Localizer["EmailLabel"]</label>
                <input type="email" name="email" class="form-control" placeholder="@Localizer["EmailPlaceholder"]" required />
            </div>
            <div class="form-group mb-3">
                <label>@Localizer["PhoneLabel"]</label>
                <input type="tel" name="phone" class="form-control" placeholder="@Localizer["PhonePlaceholder"]" required />
            </div>
            <div class="form-group mb-3">
                <label>@Localizer["GenderLabel"]</label><br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="genderMale" value="true" checked />
                    <label class="form-check-label" for="genderMale">@Localizer["GenderMale"]</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="false" />
                    <label class="form-check-label" for="genderFemale">@Localizer["GenderFemale"]</label>
                </div>
            </div>
            <div class="form-group mb-3">
                <label>@Localizer["BirthdateLabel"]</label>
                <div class="date-group d-flex gap-2">
                    <input type="hidden" name="dob" id="dobHiddenInput" />
                    <select name="dob_day" id="dob_day" class="form-select" required>
                        <option value="">@Localizer["Day"]</option>
                        @for (int i = 1; i <= 31; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>

                    <select name="dob_month" id="dob_month" class="form-select" required>
                        <option value="">@Localizer["Month"]</option>
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>

                    <select name="dob_year" id="dob_year" class="form-select" required>
                        <option value="">@Localizer["Year"]</option>
                        @for (int i = DateTime.Now.Year; i >= 1900; i--)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
            </div>

            <div class="form-group mb-3">
                <label>@Localizer["PasswordLabel"]</label>
                <div class="input-group">
                    <input type="password" name="password" class="form-control" placeholder="@Localizer["PasswordPlaceholder"]" required id="registerPassword" />
                    <span class="input-group-text" onclick="togglePassword('registerPassword', this)">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label>@Localizer["ConfirmPasswordLabel"]</label>
                <div class="input-group">
                    <input type="password" name="confirmPassword" class="form-control" placeholder="@Localizer["ConfirmPasswordPlaceholder"]" required id="registerConfirmPassword" />
                    <span class="input-group-text" onclick="togglePassword('registerConfirmPassword', this)">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
            </div>

            <button type="submit" style="background: #E48600;" class="btn w-100 text-white fw-bold">@Localizer["RegisterButton"]</button>
        </form>

        <hr />
        <div class="text-center">
            @Localizer["AlreadyHaveAccount"]
            <a href="javascript:void(0);" onclick="openLoginModal()" class="text-orange link">@Localizer["LoginNow"]</a>
        </div>
    </div>
</div>

<script src="~/js/register_form_handler.js"></script>
