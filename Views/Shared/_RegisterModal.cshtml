<!-- Modal đăng ký -->
<div id="registerModal" class="custom-modal-overlay" style="display:none; overflow-y: auto; scrollbar-width: none; -ms-overflow-style: none;">
    <div class="custom-modal-box" style="max-height: 90vh; overflow-y: auto; scrollbar-width: none; -ms-overflow-style: none;">
        <button class="custom-modal-close" onclick="closeRegisterModal()">×</button>
        <div class="text-center mb-4">
            <img src="~/images/hub_logo_new.png" width="150" alt="Register" />
            <h4 class="fw-bold mt-2">Đăng Ký Tài Khoản</h4>
        </div>
        <form asp-controller="Register" asp-action="Submit" method="post">
            <div class="form-group mb-3">
                <label>Họ và tên</label>
                <input type="text" name="name" class="form-control" placeholder="Nhập Họ và tên" required />
            </div>
            <div class="form-group mb-3">
                <label>Email</label>
                <input type="email" name="email" class="form-control" placeholder="Nhập Email" required />
            </div>
            <div class="form-group mb-3">
                <label>Số điện thoại</label>
                <input type="tel" name="phone" class="form-control" placeholder="Nhập Số điện thoại" required />
            </div>
            <div class="form-group mb-3">
                <label>Giới tính</label><br />
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="genderMale" value="true" checked />
                    <label class="form-check-label" for="genderMale">Nam</label>
                </div>
                <div class="form-check form-check-inline">
                    <input class="form-check-input" type="radio" name="gender" id="genderFemale" value="false" />
                    <label class="form-check-label" for="genderFemale">Nữ</label>
                </div>
            </div>
            <div class="form-group mb-3">
                <label>Ngày sinh</label>
                <div class="date-group d-flex gap-2">
                    <!-- thêm hidden để gom ngày sinh -->
                    <input type="hidden" name="dob" id="dobHiddenInput" />
                    <select name="dob_day" id="dob_day" class="form-select" required>
                        <option value="">Ngày</option>
                        @for (int i = 1; i <= 31; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>

                    <select name="dob_month" id="dob_month" class="form-select" required>
                        <option value="">Tháng</option>
                        @for (int i = 1; i <= 12; i++)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>

                    <select name="dob_year" id="dob_year" class="form-select" required>
                        <option value="">Năm</option>
                        @for (int i = DateTime.Now.Year; i >= 1900; i--)
                        {
                            <option value="@i">@i</option>
                        }
                    </select>
                </div>
            </div>



            <div class="form-group mb-3">
                <label>Mật khẩu</label>
                <div class="input-group">
                    <input type="password" name="password" class="form-control" placeholder="Nhập Mật khẩu" required id="registerPassword" />
                    <span class="input-group-text" onclick="togglePassword('registerPassword', this)">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label>Nhập lại mật khẩu</label>
                <div class="input-group">
                    <input type="password" name="confirmPassword" class="form-control" placeholder="Nhập lại mật khẩu" required id="registerConfirmPassword" />
                    <span class="input-group-text" onclick="togglePassword('registerConfirmPassword', this)">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
            </div>


            <div class="form-group mb-3">
                <label>Địa chỉ khu vực</label>
                <input type="text" name="zoneAddress" class="form-control" placeholder="Nhập khu vực bạn sống" required />
            </div>

            <button type="submit" style="background: #E48600;" class="btn w-100 text-white fw-bold">ĐĂNG KÝ</button>
        </form>
        <hr />
        <div class="text-center">
            Bạn đã có tài khoản? <a href="javascript:void(0);" onclick="openLoginModal()" class="text-orange">Đăng nhập</a>
        </div>
    </div>
</div>

<script src="~/js/register_form_handler.js"></script>
