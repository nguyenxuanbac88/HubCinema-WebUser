@model TicketViewModel

<div class="ticket-modal-content text-center p-3">
    <img src="@Model.PosterUrl" width="100" class="mb-2" />
    <h5 class="fw-bold">@Model.MovieTitle</h5>
    <div class="text-muted small">@Model.CinemaName - @Model.RoomName</div>
    <div class="text-muted small mb-2">@Model.ShowTime.ToString("HH:mm dd/MM/yyyy")</div>
    <div class="fw-semibold mb-1">🎟 Ghế: @Model.Seats</div>

    @if (Model.Foods.Any())
    {
        <div class="text-muted small mb-2">
            🍿 Combo: @string.Join(", ", Model.Foods.Select(f => $"{f.Quantity}x {f.FoodName}"))
        </div>
    }

    <div class="text-success fw-bold mt-2">
        💰 Tổng: @(Model.Price.ToString("N0")) VNĐ
    </div>
    <div class="text-muted small">Mã vé: <span>@Model.OrderId</span></div>
</div>
