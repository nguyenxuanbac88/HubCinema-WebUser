<!-- Modal quên mật khẩu -->
<div id="forgotModal" class="custom-modal-overlay" style="display:none;">
    <div class="custom-modal-box">
        <button class="custom-modal-close" onclick="closeForgotModal()">×</button>
        <div class="text-center mb-4">
            <img src="~/images/hub_logo_new.png" width="150" alt="Forgot Password" />
            <h4 class="fw-bold mt-2">Quên Mật Khẩu</h4>
        </div>
        <form asp-controller="Login" asp-action="ForgotPassword" method="post">
            <div class="form-group mb-3">
                <label>Nhập Email để khôi phục</label>
                <input type="email" name="email" class="form-control" placeholder="Nhập Email" required />
            </div>
            <button type="submit" style="background: #E48600;" class="btn w-100 text-white fw-bold">GỬI YÊU CẦU</button>
        </form>
    </div>
</div>
