@* Views/Shared/_ConfirmPasswordModal.cshtml *@
<div id="confirmPasswordModal" class="custom-modal-overlay" style="display:none;">
    <div class="custom-modal-box">
        <button class="custom-modal-close" onclick="closeConfirmModal()">×</button>
        <div class="text-center mb-4">
            <img src="/images/hub_logo_new.png" width="150" alt="Reset" />
            <h4 class="fw-bold mt-2">Xác Nhận Đổi Mật Khẩu</h4>
        </div>

        <form asp-controller="Login" asp-action="ConfirmPassword" method="post">
            <div class="form-group mb-3">
                <label>Email</label>
                <input type="email" name="email" class="form-control" placeholder="Nhập Email" required />
            </div>
            <div class="form-group mb-3">
                <label>Mật khẩu mới</label>
                <div class="input-group">
                    <input type="password" name="newPassword" id="changeNewPassword" class="form-control" placeholder="Nhập mật khẩu mới" required />
                    <span class="input-group-text" onclick="togglePassword('changeNewPassword', this)">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
            </div>

            <div class="form-group mb-3">
                <label>Mã OTP</label>
                <input type="text" name="otp" class="form-control" placeholder="Nhập mã OTP" required />
            </div>

            <button type="submit" style="background: #E48600;" class="btn w-100 text-white fw-bold">XÁC NHẬN</button>
        </form>

        @if (TempData["ConfirmMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                @TempData["ConfirmMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>
