<div id="confirmPasswordModal" class="custom-modal-overlay" style="display:none;">
    <div class="custom-modal-box">
        <button class="custom-modal-close" onclick="closeConfirmPasswordModal()">×</button>
        <div class="text-center mb-4">
            <img src="/images/hub_logo_new.png" width="150" alt="Reset" />
            <h4 class="fw-bold mt-2">Đặt Lại Mật Khẩu Mới</h4>
        </div>

        <form asp-controller="Login" asp-action="ConfirmPassword" method="post">
            <input type="hidden" name="email" value="@TempData["VerifiedEmail"]" />
            <input type="hidden" name="otp" value="@TempData["VerifiedOTP"]" />
            <div class="form-group mb-3">
                <label>Mật khẩu mới</label>
                <div class="input-group">
                    <input type="password" name="newPassword" class="form-control" placeholder="Nhập mật khẩu mới" required />
                    <span class="input-group-text" onclick="togglePassword(this)">
                        <i class="bi bi-eye-slash"></i>
                    </span>
                </div>
            </div>
            <button type="submit" class="btn btn-warning w-100 text-white fw-bold">XÁC NHẬN</button>
        </form>


        <div id="confirmResult" class="alert mt-3 d-none"></div>
    </div>
</div>
