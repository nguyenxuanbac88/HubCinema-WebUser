@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer Localizer
@inject IHttpContextAccessor HttpContextAccessor
@{
    var email = HttpContextAccessor.HttpContext?.Session.GetString("VerifiedEmail");
    var otp = HttpContextAccessor.HttpContext?.Session.GetString("VerifiedOTP");
}

<div id="confirmPasswordModal" class="custom-modal-overlay" style="display:none;">
    <div class="custom-modal-box">
        <button class="custom-modal-close" onclick="closeConfirmPasswordModal()">×</button>

        <div class="text-center mb-4">
            <img src="/images/hub_logo_new.png" width="150" alt="Reset" />
            <h4 class="fw-bold mt-2">@Localizer["ResetPasswordTitle"]</h4>
        </div>

        <form asp-controller="Login" asp-action="ConfirmPassword" method="post">
            <input type="hidden" name="email" value="@email" />
            <input type="hidden" name="otp" value="@otp" />

            <div class="form-group mb-3">
                <label>@Localizer["NewPasswordLabel"]</label>
                <div class="input-group">
                    <input type="password" name="newPassword" id="newPasswordField" class="form-control" placeholder="@Localizer["NewPasswordPlaceholder"]" required />
                    <span class="input-group-text" onclick="togglePassword('newPasswordField', this)">
                        <i class="bi bi-eye-slash"></i>
                    </span>

                </div>
            </div>

            <button type="submit" style="background: #E48600;" class="btn btn-warning w-100 text-white fw-bold"> @Localizer["ConfirmButton"]</button>
        </form>

        <div id="confirmResult" class="alert mt-3 d-none"></div>
    </div>
</div>


