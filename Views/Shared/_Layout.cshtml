<!DOCTYPE html>
<html lang="vi">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewBag.Title - Rạp phim</title>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.10.5/font/bootstrap-icons.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/header.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/footer.css" asp-append-version="true" />

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js"></script>
    @RenderSection("Styles", required: false)
</head>
<body>
    <div class="topbar d-flex justify-content-between align-items-center flex-wrap">
        <div class="d-flex align-items-center gap-2 ms-auto">
            <div class="language-switch me-3">
                <a href="#" class="active">VN</a>
                <a href="#">EN</a>
            </div>
            <a href="#">Đăng ký</a>
        </div>
    </div>

    <nav class="navbar navbar-expand-lg nav-hub">
        <div class="container d-flex justify-content-between align-items-center py-2">
            <!-- Logo -->
            <a class="navbar-brand d-flex align-items-center" href="/">
                <img src="/images/hub-logo.png" alt="Logo" class="logo-hub">
            </a>

            <!-- Nút TICKET -->
            <a href="/dat-ve" class="btn btn-ticket mx-3">
                🎟 TICKET
            </a>

            <!-- Menu -->
            <div class="d-flex align-items-center gap-4 flex-grow-1">
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Phim</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Phim đang chiếu</a></li>
                        <li><a class="dropdown-item" href="#">Phim sắp chiếu</a></li>
                    </ul>
                </div>
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Rạp</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Tất cả rạp</a></li>
                    </ul>
                </div>
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Sản phẩm</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Bắp nước</a></li>
                    </ul>
                </div>
                <div class="dropdown">
                    <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">Sự kiện và ưu đãi</a>
                    <ul class="dropdown-menu">
                        <li><a class="dropdown-item" href="#">Khuyến mãi</a></li>
                    </ul>
                </div>
            </div>

            <!-- Tài khoản -->
            <div class="d-flex align-items-center gap-3">
                <a href="/dang-nhap" class="nav-icon-link">
                    <i class="bi bi-box-arrow-in-right me-1"></i> Đăng nhập
                </a>
                <a href="/thanh-vien" class="nav-icon-link">
                    <i class="bi bi-award me-1"></i> Thành viên
                </a>
            </div>
        </div>
    </nav>


    <main class="container">
        @RenderBody()
    </main>

    <footer>
        <div class="container text-center">
            <img src="https://www.galaxycine.vn/galaxy-logo-mobile.svg" alt="Galaxy Logo" style="height: 40px; margin-bottom: 1rem;" />
            <p class="mb-1">&copy; 2025 Galaxy Cinema. All rights reserved.</p>
            <p class="mb-1">Hotline: 1900 6017</p>
            <p class="mb-3">Email: support@galaxycine.vn</p>
            <div>
                <a href="#">Facebook</a>
                <a href="#">YouTube</a>
                <a href="#">Instagram</a>
            </div>
        </div>
    </footer>

    @RenderSection("Scripts", required: false)
</body>
</html>
