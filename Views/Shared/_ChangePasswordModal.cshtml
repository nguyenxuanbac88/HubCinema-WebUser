

<div id="changePasswordModal" class="custom-modal-overlay" style="display:none;">
    <div class="custom-modal-box">
        <button class="custom-modal-close" onclick="closeChangePasswordModal()">×</button>

        <div class="text-center mb-4">
            <img src="/images/hub_logo_new.png" width="150" alt="Change Password" />
            <h4 class="fw-bold mt-2">Đổi Mật Khẩu</h4>
        </div>

        <form asp-controller="Account" asp-action="ChangePassword" method="post">
            <!-- Hidden username/email -->
            <input type="hidden" name="Username" value="@Model.Email" />

            <div class="form-group mb-3">
                <label>Mật khẩu cũ</label>
                <input type="password" name="OldPassword" class="form-control" placeholder="Nhập mật khẩu cũ" required />
            </div>
            <div class="form-group mb-3">
                <label>Mật khẩu mới</label>
                <input type="password" name="NewPassword" class="form-control" placeholder="Nhập mật khẩu mới" required />
            </div>

            <button type="submit" class="btn w-100 text-white fw-bold" style="background: #E48600;">
                XÁC NHẬN
            </button>
        </form>


        @if (TempData["ChangePasswordMessage"] != null)
        {
            <div class="alert alert-info alert-dismissible fade show mt-3" role="alert">
                @TempData["ChangePasswordMessage"]
                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
            </div>
        }
    </div>
</div>
