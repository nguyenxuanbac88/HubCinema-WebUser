@model MovieTicketWebsite.Models.TicketViewModel

@{
    ViewData["Title"] = "Vé của bạn";
    var showTimeFormatted = Model.ShowTime.ToString("HH:mm - dddd, dd/MM/yyyy");
}

<style>
    .ticket-modal {
        max-width: 360px;
        background: #fff;
        border-radius: 12px;
        box-shadow: 0 5px 25px rgba(0,0,0,0.2);
        padding: 20px;
        margin: 40px auto;
        position: relative;
        font-family: 'Segoe UI', sans-serif;
    }

        .ticket-modal .close-btn {
            position: absolute;
            right: 12px;
            top: 12px;
            font-size: 18px;
            cursor: pointer;
            color: #999;
        }

    .ticket-poster {
        max-height: 140px;
        object-fit: contain;
        margin: 0 auto 10px;
    }

    .ticket-qr {
        margin: 16px auto;
        width: 130px;
        height: 130px;
    }

    .ticket-divider {
        border-top: 1px dashed #ccc;
        margin: 16px 0;
    }

    .ticket-label {
        font-weight: 500;
        margin-bottom: 4px;
    }
</style>

<div class="bg-dark min-vh-100 d-flex align-items-center justify-content-center">
    <div class="ticket-modal">
        <div class="close-btn" onclick="window.location.href='@Url.Action("Index", "Home")'">
            <i class="bi bi-x-circle"></i>
        </div>

        <div class="text-center">
            <img src="@(!string.IsNullOrEmpty(Model.PosterUrl) ? Model.PosterUrl : "/images/default-poster.jpg")"
                 alt="Poster" class="ticket-poster" />

            <h6 class="fw-bold">@Model.MovieTitle</h6>
            <div class="text-muted small">@showTimeFormatted</div>
        </div>

        <div class="ticket-divider"></div>

        <div class="small text-center">
            <div><strong>@Model.CinemaName</strong> - <span class="text-muted">@Model.RoomName</span></div>
        </div>

        <div class="ticket-qr text-center">
            <img src="https://api.qrserver.com/v1/create-qr-code/?size=130x130&data=@Model.OrderId" alt="QR Code" />
        </div>

        <div class="ticket-divider"></div>

        <div class="px-2 small">
            <div class="mb-1"><span class="ticket-label">Ghế:</span> @Model.Seats</div>
            @if (Model.Foods != null && Model.Foods.Any())
            {
                <div class="ticket-divider"></div>
                <div class="px-2 small">
                    <div class="ticket-label mb-1">Combo / Sản phẩm đã chọn:</div>
                    <ul class="ps-3 mb-1">
                        @foreach (var item in Model.Foods)
                        {
                            <li>@item.Quantity x @item.FoodName</li>

                        }
                    </ul>
                    
                </div>
            }

            <div class="mb-1"><span class="ticket-label">Mã vé:</span> @Model.OrderId</div>
            <div class="mb-1"><span class="ticket-label">Tổng tiền:</span> @Model.Price.ToString("N0") đ</div>
        </div>

        <div class="text-center mt-3">
            <a href="@Url.Action("Index", "Home")" class="btn btn-outline-primary btn-sm">Quay về trang chủ</a>
        </div>
    </div>
</div>
@section Scripts {
    <script>
        document.addEventListener("DOMContentLoaded", function () {
            const shouldClear = '@TempData["ClearSeatCountdown"]' === 'True';

            if (shouldClear) {
                sessionStorage.removeItem("seatCountdownStart");
                const countdown = document.getElementById("countdown-timer");
                if (countdown) countdown.remove();
            }
        });
    </script>
}
