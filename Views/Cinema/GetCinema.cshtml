@model MovieTicketWebsite.Models.Cinema
<link rel="stylesheet" href="~/css/GetCinema.css" />
<script src="~/js/GetCinema.js"></script>
<div class="container py-4">
    <!-- Banner -->
    <div class="mb-4">
        <img src="/images/banner_rap1.jpg" class="img-fluid rounded shadow" alt="Banner Rạp" />
    </div>

    <!-- Thông tin rạp -->
    <div class="mb-4">
        <h5 class="fw-bold">@Model.CinemaName</h5>
        <p>
            <strong>Địa chỉ:</strong> @Model.Address<br>
            <strong>Thành phố:</strong> @Model.City<br>
            <strong>Hotline:</strong> <a href="tel:19002224">1900 2224</a>
        </p>
        <div class="d-flex gap-2">
            <select class="form-select w-auto">
                <option>@Model.City</option>
            </select>
            <select class="form-select w-auto">
                <option>@Model.CinemaName</option>
            </select>
        </div>
    </div>
    <!-- Tiêu đề PHIM -->
    <h5 class="fw-bold border-start border-4 border-primary ps-2 mb-3">PHIM</h5>

    <!-- Tabs ngày chiếu -->
    <ul class="nav d-flex gap-3 justify-content-center align-items-center border-bottom border-primary pb-2 mb-4" id="movieTabs">

        <li class="nav-item">
            <button class="btn tab-date active">Hôm Nay<br><small>@DateTime.Today.ToString("dd/MM")</small></button>
        </li>
        <li class="nav-item">
            <button class="btn tab-date">Thứ Bảy<br><small>@DateTime.Today.AddDays(1).ToString("dd/MM")</small></button>
        </li>
        <li class="nav-item">
            <button class="btn tab-date">Chủ Nhật<br><small>@DateTime.Today.AddDays(2).ToString("dd/MM")</small></button>
        </li>
    </ul>
    

    <!-- Danh sách phim -->
