@model List<MovieTicketWebsite.Models.ComboUuDai>

<section class="combo-section">
    <div class="container">
        <!-- Header COMBO + vạch cam -->
        <div class="row align-items-center mb-4">
            <div class="col-auto d-flex align-items-center">
                <div class="me-2" style="width: 5px; height: 22px; background-color: #d18800; border-radius: 2px;"></div>
                <h2 class="section-title m-0 fs-5 fw-bold">COMBO ƯU ĐÃI</h2>
            </div>
        </div>

        <!-- Danh sách combo -->
        <div class="row g-4">
            @foreach (var combo in Model)
            {
                <div class="col-lg-3 col-md-4 col-6">
                    <div class="combo">
                         <a href="@Url.Action("ListFood", "Food")">
                            <img src="@combo.ImageURL" alt="@combo.FoodName" class="img-fluid mb-2" />
                        </a>
                        <h3>@combo.FoodName</h3>
                        <p>Giá: @combo.Price.ToString("N0")đ</p>
                    </div>
                </div>
            }
        </div>
    </div>
</section>
