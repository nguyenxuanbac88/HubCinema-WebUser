@model List<MovieTicketWebsite.Models.FoodViewModel>

<div class="container-fluid px-5 py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ListFood", "Food")">Sản phẩm</a></li>
        </ol>
    </nav>

    <h2 class="fw-bold mb-4">Thực phẩm & Combo</h2>

    <div class="row gx-4 gy-4">
        @for (int i = 0; i < Model.Count; i++)
        {
            var food = Model[i];
            var isHidden = i >= 4;
            var style = isHidden ? "display: none;" : "";

            <div class="col-lg-3 col-md-4 col-sm-6 food-item" style="@style">
                <div class="card product-card h-100">
                    <div class="product-image-wrapper">
                        <img src="@food.ImageUrl" alt="@food.FoodName" class="product-img" />
                        <a href="@Url.Action("FoodDetails", "Food", new { id = food.IdFood })" class="overlay-hover">
                            <i class="bi bi-eye me-2"></i> Xem chi tiết
                        </a>
                    </div>
                    <div class="card-body text-start">
                        <h6 class="card-title mb-1 fw-semibold">@food.FoodName</h6>
                        <p class="text-danger fw-bold mb-2">@string.Format("{0:N0} ₫", food.Price)</p>
                        <div class="d-flex gap-2">
                            <a href="#" class="btn btn-buy-now w-100 text-center">Mua ngay</a>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>

    @if (Model.Count > 4)
    {
        <div class="text-center mt-4">
            <button id="toggleFoodBtn" class="btn btn-outline-warning px-4 py-2 fw-medium d-inline-flex align-items-center gap-2">
                <span class="toggle-text">Xem thêm</span>
                <svg class="toggle-icon" xmlns="http://www.w3.org/2000/svg" viewBox="0 0 320 512" width="14" height="14">
                    <path fill="currentColor" d="M278.6 233.4c12.5 12.5 12.5 32.8 0 45.3l-160 160c-12.5 12.5-32.8 12.5-45.3 0s-12.5-32.8 0-45.3L210.7 256 73.4 118.6c-12.5-12.5-12.5-32.8 0-45.3s32.8-12.5 45.3 0l160 160z" />
                </svg>
            </button>
        </div>
    }

</div>

