@model MovieTicketWebsite.Models.FoodViewModel
<div class="container py-4">
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/">Trang chủ</a></li>
            <li class="breadcrumb-item"><a href="@Url.Action("ListFood", "Food")">Sản phẩm</a></li>
            <li class="breadcrumb-item active" aria-current="page">@Model.FoodName</li>
        </ol>
    </nav>

    <div class="row">
        <!-- Ảnh sản phẩm -->
        <div class="col-lg-5">
            <img src="@Model.ImageUrl" alt="@Model.FoodName" class="product-image img-fluid" />
        </div>

        <!-- Thông tin sản phẩm -->
        <div class="col-lg-7">
            <h3 class="fw-bold">@Model.FoodName</h3>
            <p class="price-text">@string.Format("{0:N0} ₫", Model.Price)</p>

            @if (!string.IsNullOrEmpty(Model.UnitName))
            {
                <p class="text-muted">Đơn vị: @Model.UnitName</p>
            }

            <div class="d-flex align-items-center mb-3">
                <label class="me-2">Số lượng:</label>
                <div class="input-group quantity-box">
                    <button class="btn btn-outline-secondary" type="button" id="btnMinus">-</button>
                    <input type="text" class="form-control text-center" id="quantityInput" value="1" />
                    <button class="btn btn-outline-secondary" type="button" id="btnPlus">+</button>
                </div>
            </div>

            <div class="d-flex gap-2 mb-4">
                <button class="btn btn-buy-now">Mua ngay</button>
            </div>
        </div>
    </div>

    <!-- Mô tả -->
    <div class="mt-5">
        <h5 class="fw-bold mb-3">MÔ TẢ SẢN PHẨM</h5>
        <div class="product-description">
            @Html.Raw(Model.Description)
        </div>
    </div>
</div>
